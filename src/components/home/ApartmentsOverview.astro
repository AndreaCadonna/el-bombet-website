---
/**
 * ApartmentsOverview Component
 * Displays all available apartments in a responsive grid
 */
import ApartmentCard from './ApartmentCard.astro';
import { apartments } from '~/data/apartments';
---

<section id="appartamenti" class="py-16 md:py-20 lg:py-28 bg-gradient-to-br from-gray-50 via-white to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        I nostri appartamenti
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Scegli la soluzione che fa per te, per un soggiorno indimenticabile a Trento. Ogni appartamento è arredato con
        gusto moderno e dotato di tutti i comfort.
      </p>
      <div class="w-20 h-1 bg-blue-600 mx-auto mt-6"></div>
    </div>

    <!-- Apartments Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {apartments.map((apartment) => <ApartmentCard apartment={apartment} />)}
    </div>

    <!-- Additional Info Banner -->
    <div class="mt-16 bg-gradient-to-r from-blue-600 to-blue-700 rounded-2xl p-8 md:p-12 text-center text-white shadow-2xl">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">Non riesci a scegliere?</h3>
        <p class="text-lg mb-6 opacity-95 leading-relaxed">
          Contattaci e saremo felici di aiutarti a trovare l'appartamento perfetto per le tue esigenze. Ti forniremo
          tutte le informazioni necessarie e un preventivo personalizzato.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contatti"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-white text-blue-700 font-semibold rounded-lg hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
            <span>Richiedi informazioni</span>
          </a>
          <a
            href="mailto:casanegrano@gmail.com"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent text-white border-2 border-white font-semibold rounded-lg hover:bg-white/10 transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span>Scrivici</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Quick Comparison Table -->
    <div class="mt-16">
      <h3 class="text-2xl md:text-3xl font-bold text-gray-900 text-center mb-8">Confronto rapido</h3>
      <div class="overflow-x-auto">
        <table class="w-full bg-white rounded-xl shadow-lg overflow-hidden">
          <thead class="bg-blue-600 text-white">
            <tr>
              <th class="px-6 py-4 text-left font-semibold">Appartamento</th>
              <th class="px-6 py-4 text-center font-semibold">Ospiti</th>
              <th class="px-6 py-4 text-center font-semibold">Superficie</th>
              <th class="px-6 py-4 text-center font-semibold">Camere</th>
              <th class="px-6 py-4 text-center font-semibold">Bagni</th>
              <th class="px-6 py-4 text-center font-semibold"></th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            {
              apartments.map((apartment, index) => (
                <tr class={index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}>
                  <td class="px-6 py-4">
                    <div>
                      <p class="font-semibold text-gray-900">{apartment.name.replace('Appartamento ', '')}</p>
                      <p class="text-sm text-gray-600">{apartment.subtitle}</p>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center text-gray-900 font-medium">{apartment.capacity}</td>
                  <td class="px-6 py-4 text-center text-gray-900 font-medium">{apartment.size} m²</td>
                  <td class="px-6 py-4 text-center text-gray-900">{apartment.bedrooms}</td>
                  <td class="px-6 py-4 text-center text-gray-900">{apartment.bathrooms}</td>
                  <td class="px-6 py-4 text-center">
                    <a
                      href={`/appartamenti/${apartment.slug}`}
                      class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-700 font-medium transition-colors"
                    >
                      <span class="text-sm">Dettagli</span>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M17 8l4 4m0 0l-4 4m4-4H3"
                        />
                      </svg>
                    </a>
                  </td>
                </tr>
              ))
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
